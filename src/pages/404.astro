---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import error from "../images/error-404.png";
---

<MainLayout title="Page not Found">
  <div class="flex flex-col items-center justify-center gap-8">
    <Image
      src={error}
      alt="404 page not found"
      height={250}
      width={250}
      class="mt-10"
    />
    <h1 class="text-5xl">Page not found</h1>
    <p class="text-2xl">Sorry, this page doesn't exist</p>

    <a
      class="inline-block p-4 bg-indigo-500 font-bold text-xl text-indigo-50 hover:text-indigo-950 hover:bg-indigo-300 transition-all duration-300"
      href="/">Go home</a
    >
  </div>
</MainLayout>
